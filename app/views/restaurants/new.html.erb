<div class="center jambotron">
	<%= form_for @restaurant do |f| %>
		<p>
			<%= f.label "名前" %>
			<%= f.text_field :name %>
			<% if @restaurant.errors.any? %>
				<%= @restaurant.errors.messages[:name][0] %>
			<% end %>
	<br><br>
			<%= f.label "備考" %>
			<%= f.text_field :note %>
			<% if @restaurant.errors.any? %>
				<%= @restaurant.errors.messages[:note][0] %>
			<% end %>
	<br><br>
			<%= f.label "緯度" %>
			<%= f.text_field :latitude %>
			<% if @restaurant.errors.any? %>
				<%= @restaurant.errors.messages[:latitude][0] %>
			<% end %>
	<br><br>
			<%= f.label "経度" %>
			<%= f.text_field :longitude %>
			<% if @restaurant.errors.any? %>
				<%= @restaurant.errors.messages[:longitude][0] %>
			<% end %>
	<br><br>
			<%= f.label "食べログURL" %>
			<%= f.text_field :tabelog_url %>
			<% if @restaurant.errors.any? %>
				<%= @restaurant.errors.messages[:tabelog_url][0] %>
			<% end %>

		</p>

		<p>
			<%= f.submit "登録", class: "btn btn-lg btn-primary" %>
		</p>

	<% end %>
</div>
