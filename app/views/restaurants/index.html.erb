<h1>ご飯屋さん一覧</h1>
<ul>
	<% @restaurants.each do |restaurant| %>
		<li> 
			<%= link_to restaurant.name, restaurant_path(restaurant.id) %> | <%= link_to "削除", restaurant, method: :delete, data: { confirm: "削除しますか？" }%>
